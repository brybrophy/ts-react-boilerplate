{
    "name": "ts-express-react-starter",
    "version": "1.5.0",
    "description": "A starter project using Exress, React, and TypeScript",
    "main": "src/index.js",
    "scripts": {
        "build": "rimraf dist && yarn build-client && yarn build-server",
        "build-client": "parcel build src/client/index.html -d dist/client --public-url /dist",
        "build-server": "parcel build src/server/index.ts -d dist/server --public-url /dist --target=node6",
        "dev": "parcel src/client/index.html --port 3000",
        "prettier": "prettier --write --config .prettierrc \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
        "start": "node dist/server"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,scss}": [
            "yarn run prettier",
            "git add"
        ]
    },
    "author": "Bryan Brophy <brybrophy@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/compression": "0.0.36",
        "@types/cookie-parser": "^1.4.1",
        "@types/express": "^4.17.0",
        "@types/morgan": "^1.7.35",
        "@types/node": "^12.0.8",
        "@types/react": "^16.8.19",
        "@types/react-dom": "^16.8.4",
        "@types/react-router-dom": "^4.3.3",
        "@types/webpack-env": "^1.13.9",
        "autoprefixer": "^9.6.0",
        "chai": "^4.2.0",
        "chalk": "^2.4.2",
        "cross-env": "^5.2.0",
        "husky": "^2.4.1",
        "install": "^0.12.2",
        "lint-staged": "^13.1.0",
        "mocha": "^6.1.4",
        "node-sass": "^4.12.0",
        "npm": "^6.9.0",
        "parcel-bundler": "^1.12.3",
        "postcss-color-rgba-fallback": "^3.0.0",
        "precss": "^4.0.0",
        "prettier": "^1.18.2",
        "react-imported-component": "^5.5.3",
        "rimraf": "^2.6.3",
        "ts-lint": "^4.5.1",
        "tslib": "^1.10.0",
        "tslint-config-airbnb": "^5.11.1",
        "types-installer": "^1.6.2",
        "typescript": "^3.5.1"
    },
    "dependencies": {
        "@hot-loader/react-dom": "^16.8.6",
        "body-parser": "^1.9.0",
        "classnames": "^2.2.6",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.4",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "moment": "^2.24.0",
        "morgan": "^1.9.1",
        "query-string": "^6.7.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-hot-loader": "^4.11.0",
        "react-router-dom": "^5.0.1",
        "sitemap": "^2.2.0"
    },
    "alias": {
        "react-dom": "@hot-loader/react-dom"
    },
    "browser": {
        "fs": false
    }
}
