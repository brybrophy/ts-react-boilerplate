{
    "name": "ts-express-react-starter",
    "version": "1.4.0",
    "description": "A starter project using Exress, React, and TypeScript",
    "main": "src/index.js",
    "scripts": {
        "build": "rimraf dist && yarn build-client && yarn build-server",
        "build-client": "parcel build src/client/index.html -d dist/client --public-url /dist",
        "build-server": "parcel build src/server/index.ts -d dist/server --public-url /dist --target=node6",
        "dev": "parcel src/client/index.html --port 3000",
        "prettier": "prettier --write --config .prettierrc \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
        "start": "node dist/server"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,scss}": [
            "yarn run prettier",
            "git add"
        ]
    },
    "author": "Bryan Brophy <brybrophy@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/autoprefixer": "^6.7.3",
        "@types/body-parser": "^1.17.0",
        "@types/chai": "^4.1.4",
        "@types/classnames": "^2.2.4",
        "@types/compression": "^0.0.36",
        "@types/cookie-parser": "^1.4.1",
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/json-stringify-safe": "^5.0.0",
        "@types/lodash": "^4.14.110",
        "@types/mocha": "^5.2.4",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.5.1",
        "@types/node-sass": "^3.10.32",
        "@types/prettier": "^1.13.1",
        "@types/query-string": "^6.1.0",
        "@types/react": "^16.4.6",
        "@types/react-dom": "^16.0.6",
        "@types/react-hot-loader": "^4.1.0",
        "@types/react-router-dom": "^4.2.7",
        "@types/rimraf": "^2.0.2",
        "autoprefixer": "^7.1.6",
        "chai": "^4.1.2",
        "chalk": "^2.3.0",
        "cross-env": "^5.2.0",
        "husky": "^0.14.3",
        "lint-staged": "^6.0.0",
        "mocha": "^4.0.1",
        "node-sass": "^4.6.1",
        "parcel-bundler": "^1.9.6",
        "postcss-color-rgba-fallback": "^3.0.0",
        "precss": "^2.0.0",
        "prettier": "^1.10.2",
        "react-imported-component": "^4.6.2",
        "rimraf": "^2.6.2",
        "ts-lint": "^4.5.1",
        "tslib": "^1.9.0",
        "tslint-config-airbnb": "^5.7.0",
        "types-installer": "^1.4.0",
        "typescript": "^2.7.2"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "body-parser": "^1.18.2",
        "classnames": "^2.2.5",
        "compression": "^1.7.1",
        "cookie-parser": "^1.4.3",
        "dotenv": "^4.0.0",
        "express": "^4.16.2",
        "moment": "^2.19.2",
        "morgan": "^1.9.0",
        "query-string": "^5.0.1",
        "react": "^16.4.1",
        "react-dom": "^16.1.0",
        "react-hot-loader": "^4.3.3",
        "react-router-dom": "^4.2.2",
        "sitemap": "^1.13.0",
        "susy": "^3.0.5"
    },
    "browser": {
        "fs": false
    }
}
